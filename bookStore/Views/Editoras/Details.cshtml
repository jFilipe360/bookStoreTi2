@model Editora

@{
    ViewData["Title"] = "Detalhes - Editora";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Detalhes - @Model.NomeEditora</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="FotoPreview" class="border-info rounded-3" style="height:300px;" />
                </div>
                <div class="form-group">
                    <label asp-for="URLLogo" class="control-label"></label>
                    <input asp-for="URLLogo" class="form-control" readonly />
                    <span asp-validation-for="URLLogo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeEditora" class="control-label"></label>
                    <input asp-for="NomeEditora" class="form-control" readonly />
                    <span asp-validation-for="NomeEditora" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnoFundacao" class="control-label"></label>
                    <input asp-for="AnoFundacao" class="form-control" readonly />
                    <span asp-validation-for="AnoFundacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Slogan" class="control-label"></label>
                    <input asp-for="Slogan" class="form-control" readonly />
                    <span asp-validation-for="Slogan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Website" class="control-label"></label>
                    <input asp-for="Website" class="form-control" readonly />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.EditoraId">Editar</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('FotoPreview');
            output.src = $("#URLLogo").val();
        })
    </script>
}